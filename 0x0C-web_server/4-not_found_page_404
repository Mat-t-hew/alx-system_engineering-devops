#!/usr/bin/env bash
# Update package lists and install nginx
sudo apt-get update
sudo apt-get -y install nginx

# Create index.html with "Hello World!" content
echo 'Hello World!' | sudo tee /var/www/html/index.html > /dev/null

# Create a custom 404 page with the required content
sudo bash -c 'cat <<EOF > /var/www/html/404.html
<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <h1>404 Not Found</h1>
    <p>Ceci n\'est pas une page</p>
</body>
</html>
EOF'

# Configure Nginx to use the custom 404 page
sudo sed -i '/root \/var\/www\/html;/a \
    error_page 404 /404.html;' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart
